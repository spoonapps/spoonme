from oracle/jdk:8.0
using wget 7zip
cmd %spn_wget% http://repo.spring.io/release/org/springframework/boot/spring-boot-cli/1.1.9.RELEASE/spring-boot-cli-1.1.9.RELEASE-bin.zip -O spring-boot.zip
cmd %spn_7z% x spring-boot.zip -oc:\spring-boot

env SPRING_BOOT_HOME=c:\spring-boot\spring-1.1.9.RELEASE
env spn_spring=C:\spring-boot\spring-1.1.9.RELEASE/groovy
env PATH=%PATH%;C:\spring-boot\spring-1.1.9.RELEASE\bin
